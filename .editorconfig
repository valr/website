root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,h}]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.{htm,html,css,js,mjs,cjs}]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{xml,xsd,dtd,xsl,xslt}]
indent_style = space
indent_size = 2
