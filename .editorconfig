root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,h}]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2
